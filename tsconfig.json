{
  "compilerOptions": {
    "target": "es2020",                                 
    "module": "commonjs",                          
    "baseUrl": "./src",                     
    "paths": {
      "a/*": ["./*"]
    },                                     
    "allowJs": true,                      
    "checkJs": true,                               
    "outDir": "./dist",                 
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                       
    "noImplicitAny": true,           
    "strictNullChecks": true,                       
    "alwaysStrict": true,               
    "noUnusedLocals": true,     
    "noUnusedParameters": true,
    "skipLibCheck": true                              
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
